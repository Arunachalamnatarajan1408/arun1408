sakthi
wake at 5am-3000
gym-1000
office-2000

function wake(){
    return new Promise ((resolve,reject) =>{
        setTimeout(() => {
            resolve("sakthi wakeup at 5am");
        },3000)
    });
}

function gym(){
    return new Promise((resolve,reject) =>{
        setTimeout(() => {
            resolve("gym going at 7am");

        },1000)
    });
}
 function office(){
    return new Promise((resolve,reject) =>{
        setTimeout(() => {
            reject("office going at 7am");

        },2000)
    });
}

wake().then (valve =>{console.log(valve);return gym()})
.then (valve2 =>{console.log(valve2);return office()})
.catch (valve3 =>{console.log(valve3);console.log("task completed")})

