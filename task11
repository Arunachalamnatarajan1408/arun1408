function office(idNo,employeeName,bloodgroup,DOB,code){
    this.idcard_no=idNo
    this.idName=employeeName
    this.idGroup=bloodgroup
    this.idDOB=DOB
    this.idcode=code

}
const empDetails=new office (12458,"balji","O+","14-08-2000",162023)
